<!DOCTYPE html>
<html xmlns:fb="http://ogp.me/ns/fb#" lang="en">
<head>
    <%= erb :head %>
    <script type="text/javascript" src="/javascripts/sigma.min.js"></script>
    <script type="text/javascript" src="/javascripts/sigma.parseGexf.js"></script>
    <script type="text/javascript" src="/javascripts/sigma.forceatlas2.js"></script>
    <link type="text/css" rel="stylesheet" href="/stylesheets/neo_sigma.css"/>

</head>
  <body>
    <%= erb :facebook_setup %>

    <header class="clearfix">
      <% if @user %>
          <span style="float:right" id="fbLogout"><a href="/sign_out"  class="fb_button fb_button_medium"><span class="fb_button_text">Logout</span></a></span>
          <p id="picture" style="background-image: url(https://graph.facebook.com/<%= @user['id'] %>/picture?type=normal)"></p>
          <div>
            <h1>Welcome, <strong><%= @user['name'] %></strong></h1>
            <p class="tagline">
              This is your Friends Space
              <a href="<%= @app['@app'] %>"><%= @app['name'] %></a>
            </p>

          </div>
      <% else %>
        <div>
          <h1>Welcome</h1>
            <a href='/auth/facebook' class="fb_button fb_button_medium">
              <span class="fb_button_text">Log In</span>
            </a>
        </div>

      <% end %>
    </header>


    <% if @user %>
    <section>
      <div style="text-align:center; margin: 10px">
        <button class="btn btn-primary" id="stop-layout">Stop Layout</button>
        <button class="btn btn-primary" id="rescale-graph">Rescale Graph</button>
      </div>
      <div class="span12 sigma-parent" id="sigma-example-parent">
        <div class="sigma-expand" id="sigma-example"></div>
      </div>
    </section>  
    <% end %>
  
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="/javascripts/bootstrap.min.js"> </script>

    <script type="text/javascript" src="/javascripts/neo_sigma.js"></script>
  </body>
</html>